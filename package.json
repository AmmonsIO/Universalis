{
  "name": "universalis",
  "version": "1.0.0",
  "description": "A crowdsourced market board website for FFXIV.",
  "main": "build/universalis.js",
  "scripts": {
    "build": "tsc --build && lessc ./less/styles.less ./public/css/styles.css && npm run build:minify",
    "build:node-only": "tsc --build",
    "build:minify": "npm run build:minify:1 && npm run build:minify:2 && npm run build:minify:3 && npm run build:minify:4 && npm run build:minify:5 && npm run build:minify:css",
    "build:minify:1": "node-minify --compressor uglify-es --input ./public/globals.js --output ./public/globals.min.js",
    "build:minify:2": "node-minify --compressor uglify-es --input ./public/idConversions.js --output ./public/idConversions.min.js",
    "build:minify:3": "node-minify --compressor uglify-es --input ./public/main.js --output ./public/main.min.js",
    "build:minify:4": "node-minify --compressor uglify-es --input ./public/onHashChange.js --output ./public/onHashChange.min.js",
    "build:minify:5": "node-minify --compressor uglify-es --input ./public/util.js --output ./public/util.min.js",
    "build:minify:css": "node-minify --compressor clean-css --input ./public/css/styles.css --output ./public/css/styles.min.css",
    "lint": "tslint ./src/**/*.ts",
    "start": "node .",
    "start-dev": "npm run lint && npm run build:node-only && npm start",
    "test": "mocha",
    "update": "git pull && npm install && npm run build:node-only"
  },
  "author": "karashiiro",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^8.0.1",
    "@node-minify/clean-css": "^4.1.2",
    "@node-minify/cli": "^4.1.2",
    "@node-minify/core": "^4.1.2",
    "@node-minify/uglify-es": "^4.1.2",
    "archiver": "^3.1.1",
    "cron": "^1.7.1",
    "csv-parse": "^4.4.5",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-static": "^5.0.0",
    "mongodb": "^3.3.2",
    "pug": "^2.0.4",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "sha.js": "^2.4.11",
    "typescript": "^3.5.3",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.1.0"
  },
  "devDependencies": {
    "@types/archiver": "^3.0.0",
    "@types/cron": "^1.7.1",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-static": "^4.0.1",
    "@types/koa__router": "^8.0.0",
    "@types/lodash.isequal": "^4.5.5",
    "@types/mongodb": "^3.3.1",
    "@types/request-promise": "^4.1.44",
    "@types/sha.js": "^2.4.0",
    "eslint": "^6.1.0",
    "eslint-config-google": "^0.13.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "mocha": "^6.2.0",
    "should": "^13.2.3",
    "tslint": "^5.18.0"
  }
}
